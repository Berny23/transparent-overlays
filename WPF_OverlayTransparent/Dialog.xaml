<Window x:Class="WPF_OverlayTransparent.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="ToolWindow"
        Background="Gray"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Please paste your direct image URL here" Height="95" Width="270" KeyDown="Window_KeyDown">
    <Viewbox>
        <StackPanel Width="170">
            <TextBox x:Name="ResponseTextBox" IsTabStop="True" TabIndex="0"/>
            <Button Content="OK" Click="Button_Click" IsDefault="True" IsTabStop="True" TabIndex="1" />
        </StackPanel>
    </Viewbox>
</Window>
